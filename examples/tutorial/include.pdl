description: Granite Multi-Round Chat
text:
- include: ../granite/granite_defs.pdl
- read: ../granite/multi-prompts.json
  parser: json
  def: prompts
  spec: {prompts: [str]}
  contribute: []
- ${ SYSTEM_CONTENT_CHAT }
- for:
    prompt: ${ prompts.prompts }
  repeat:
    text:
    - |
      ${ prompt }
    - model: ibm/granite-13b-chat-v2
      platform: bam
      parameters:
        decoding_method: sample
        max_new_tokens: 512
  as: text
role: user