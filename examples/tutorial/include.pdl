description: Granite Multi-Round Chat
text:
- include: ../granite/granite_defs.pdl
- read: ../granite/multi-prompts.json
  parser: json
  def: prompts
  spec: {prompts: [str]}
  contribute: []
- for:
    prompt: ${ prompts.prompts }
  repeat:
    text:
    - |
    
      ${ prompt }
    - model: replicate/ibm-granite/granite-3.0-8b-instruct:8d8fb55950fb8eb2817fc078b7b05a0bd3ecc612d6332d8009fb0c007839192e
      parameters:
        decoding_method: sample
        max_new_tokens: 512
role: user