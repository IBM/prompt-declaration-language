description: repeat loop with multiple conditions
defs:
  numbers:
    data: [42, 2, 4012, 27]
  names:
    data: ["Bob", "Carol", "David", "Ernest"]
for:
  number: ${ numbers }
  name: ${ names }
index: i
repeat:
  "${i}: ${ name }'s number is ${ number }\n"
until: ${ name == "Carol"}
max_iterations: 3