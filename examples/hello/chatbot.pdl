description: chatbot
document:
- read:
  message: "What is your query?\n"
- repeat:
  - model: ibm/granite-13b-chat-v2
    spec: str
    parameters:
      stop_sequences: ["."]
  - read:
    def: eval
    message: "\nIs this a good answer[yes/no]?\n"
    show_result: false
  - if: "{{ eval == 'no' }}"
    then:
      - read:
        message: "Why not?\n"
  until: "{{ eval == 'yes'}}"



