description: Granite Multi-Round Chat
document:
- include: examples/granite/granite_defs.pdl
- read: examples/granite/multi-prompts.json
  parser: json
  def: prompts
  spec: {prompts: [str]}
  show_result:  false
- "{{ SYSTEM_CONTENT_CHAT }}"
- for:
    prompt: "{{ prompts.prompts }}"
  repeat:
  - |
    {{ USER_TAG }}
    {{ prompt }}
    {{ ASSISTANT_TAG }}"
  - model: ibm/granite-13b-chat-v2
    parameters:
      decoding_method: sample
      max_new_tokens: 512

