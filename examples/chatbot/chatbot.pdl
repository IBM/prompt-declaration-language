description: chatbot
document:
- read:
  message: "What is your query?\n"
- repeat:
    document:
    - model: watsonx/ibm/granite-13b-chat-v2
    - read:
      def: eval
      message: "\nIs this a good answer[yes/no]?\n"
      show_result: false
    - if: "{{ eval == 'no' }}"
      then:
        document:
        - read:
          message: "Why not?\n"
  until: "{{ eval == 'yes'}}"
  as: document
role: user



