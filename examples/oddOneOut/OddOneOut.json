{
    "title": "Odd one out",
    "prompts": [
        "Pick the odd word out: skirt, dress, pen, jacket.\n",
        "skirt is clothing, dress is clothing, pen is an object, jacket is clothing.\n",
        "So the odd one is pen.\n\n",
        "Pick the odd word out: Spain, France, German, England, Singapore.\n",
        "Spain is a country, France is a country, German is a language, ...\n",
        "So the odd one is German.\n\n",
        {
            "prompts": [
                "Pick the odd word out: ",
                {
                "var": "OPTIONS",
                "lookup": {
                    "model": "granite",
                    "decoding": "argmax",
                    "input": "context",
                    "stop_sequences": [
                        "."
                    ]
                }
                },
                "\nNow the reasoning:\n",
                {
                    "var": "REASONING",
                    "constraints": [
                        "not '\n' in REASONING",
                        "not 'Pick' in REASONING",
                        "len(words(REASONING)) < 40"
                    ],
                    "lookup": {
                        "model": "granite",
                        "decoding": "argmax",
                        "input": "context",
                        "stop_sequences": [
                            "Pick the odd word",
                            "\n",
                            "So the odd one",
                            "."
                        ]
                    }
                },
                "\nNow the result:\n",
                {
                    "var": "RESULT",
                    "lookup": {
                        "model": "granite",
                        "decoding": "argmax",
                        "input": "context",
                        "stop_sequences": [
                            "Pick the odd word"
                        ]
                    },
                    "constraints": [
                        "RESULT in OPTIONS.split(', ')"
                    ]
                },
                "\n\n"
            ],
            "repeats": 3
        }
    ]
}