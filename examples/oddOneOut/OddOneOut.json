{
    "title": "Odd one out",
    "prompts": [
        "Pick the odd word out: skirt, dress, pen, jacket.\n",
        "skirt is clothing, dress is clothing, pen is an object, jacket is clothing.\n",
        "So the odd one is pen.\n\n",
        "Pick the odd word out: Spain, France, German, England, Singapore.\n",
        "Spain is a country, France is a country, German is a language, ...\n",
        "So the odd one is German.\n\n",
        {
            "prompts": [
                "Pick the odd word out: ",
                {
                "var": "OPTIONS",
                "lookup": {
                    "model": "ibm/granite-20b-code-instruct-v1",
                    "decoding": "argmax",
                    "input": "context",
                    "stop_sequences": [
                        "."
                    ]
                }
                },
                "\nNow the reasoning:\n",
                {
                    "var": "REASONING",
                    "lookup": {
                        "model": "ibm/granite-20b-code-instruct-v1",
                        "decoding": "argmax",
                        "input": "context",
                        "stop_sequences": [
                            "Pick the odd word",
                            "\n",
                            "So the odd one",
                            "."
                        ]
                    },
                    "constraints": [
                        {
                            "not_contains": "\n"
                        },
                        {
                            "not_contains": "Pick"
                        },
                        {
                            "words_len": "<40"
                        }
                    ]
                },
                "\nNow the result:\n",
                {
                    "var": "RESULT",
                    "lookup": {
                        "model": "ibm/granite-20b-code-instruct-v1",
                        "decoding": "argmax",
                        "input": "context",
                        "stop_sequences": [
                            "Pick the odd word"
                        ]
                    },
                    "constraints": [
                        {
                            "in": "OPTIONS"
                        }
                    ]
                },
                "\n\n"
            ],
            "repeats": 2
        }
    ]
}