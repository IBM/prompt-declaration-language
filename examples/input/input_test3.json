{
    "description": "Input block example with json input from stdin",
    "document": [
        {
            "read": null, 
            "parser": "json", 
            "def": "PERSON",
            "show_result": false
        }, 
        {
            "get": "PERSON.name"
        },
        " lives at the following address:\n",
        {
            "get": "PERSON.address.number"
        },
        " ",
        {
            "get": "PERSON.address.street"
        },
        " in the town of ",
        {
            "get": "PERSON.address.town"
        },
        " ",
        {
            "get": "PERSON.address.state"
        }
    ]
}