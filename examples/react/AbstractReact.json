{
    "title": "Interactive ReAct",
    "prompts": [
        {
            "var": "QUESTION"
        },
        {
            "prompts": [
                "Tho: ",
                {
                    "var": "THOUGHT",
                    "constraints": [
                        "stops_at('\n')",
                        "len(words(THOUGHT)) > 2",
                        "not 'Tho' in THOUGHT"
                    ]
                },
                "\nAct: Search",
                {
                    "var": "SUBJECT",
                    "constraints": [
                        "stops_at('/'')"
                    ]
                },
                "\nObs: ",
                {
                    "var": "RESULT"
                }
            ],
            "repeat": "*"
        },
        {
            "prompts": [
                {
                    "var": "FINAL_THOUGHT",
                    "constraints": [
                        "stops_at('\n')",
                        "len(words(FINAL_THOUGHT)) > 2",
                        "not 'Tho' in FINAL_THOUGHT"
                    ]
                },
                "\nAct: Finish '$SUBJECT"
            ]
        }
    ],
    "repeat": "*"
}