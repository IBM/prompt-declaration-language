description: function def and call
text:
- def: translate
  function:
    sentence: str
    language: str
  return:
  - "\nTranslate the sentence '${ sentence }' to ${ language }.\n"
  - model: replicate/ibm-granite/granite-3.0-8b-instruct
    parameters:
      stop_sequences: "\n"
      temperature: 0
- call: translate
  args:
    sentence: I love Paris!
    language: French
- "\n"
- call: translate
  args:
    sentence: I love Madrid!
    language: Spanish
