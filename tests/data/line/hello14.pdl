description: Hello world with model chaining
text:
- Hello,
- model: watsonx/ibm/granite-34b-code-instruct
  def: GEN
  parameters:
    stop:
    - '!'
    include_stop_sequence: true
    mock_response: " World!"
- def: translate
  function:
    sentence: str
    language: str
  spec: int
  return:
    - "\nTranslate the sentence '${ sentence }' to ${ language }\n"
    - model: watsonx/ibm/granite-20b-multilingual
      parameters:
        stop:
        - '!'
        include_stop_sequence: true
        mock_response: "Bonjour le monde!"
- call: translate
  spec: str
  args:
    sentence: Hello,${ GEN }
    language: French