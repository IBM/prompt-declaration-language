{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.ibm.prompt-declaration-language.app",
  "productName": "PDL",
  "mainBinaryName": "pdl",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "description": "PDL",
      "args": [
      ],
      "subcommands": {
        "compile": {
          "description": "Compile to PDL",
          "args": [],
          "subcommands": {
            "beeai": {
              "description": "Compile a Bee program to PDL",
              "args": [
                {
                  "name": "source",
                  "index": 1,
                  "required": true,
                  "takesValue": true
                },
                {
                  "name": "output",
                  "short": "o",
                  "required": true,
                  "takesValue": true
                }
              ]
            }
          }
        },
        "run": {
          "description": "Run a PDL program",
          "args": [
            {
              "name": "source",
              "index": 1,
              "required": true,
              "takesValue": true
            },
            {
              "name": "stream",
              "takesValue": true
            },
            {
              "name": "data",
              "takesValue": true
            },
            {
              "name": "trace",
              "takesValue": true
            }
          ]
        },
        "view": {
          "description": "View a trace",
          "args": [
            {
              "name": "trace",
              "index": 1,
              "required": true,
              "takesValue": true
            }
          ]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "../requirements.txt": "interpreter/requirements.txt"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
